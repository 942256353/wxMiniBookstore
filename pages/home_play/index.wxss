.content{
    height: 100vh;
    background-color: #fff;
    position: relative;
}
.num_top{
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.num_top .right_wrap{
    background: #d6d6d6;
    border-radius: 30rpx;
    padding: 13rpx 23rpx;
    color: #fff;
    font-size: 28rpx;
    margin: 35rpx 35rpx;
}
.img1{
    display: block;
    width: 522rpx;
    margin:50rpx auto 80rpx;
}

.img2{
    display: block;
    width: 570rpx;
    margin:0 auto;
}
.play_bottom{
    position: absolute;
    width: 100%;
    bottom: 0rpx;
    padding-bottom: 45rpx;
    display: flex;
    justify-content: flex-end;
    align-items: top;
    border-top: 4rpx solid #1a8afa;
}
.play_bottom .right_txt{
    width: 113rpx;
    height: 182rpx;
    background: url("data:image/png;base64,") no-repeat;
    background-size: 100%;
    text-align: center;
    color: #fff;
    font-size: 26rpx;
    margin-right: 40rpx;
}
.play_bottom  .txt1{
    font-size: 42rpx;
    color: #333333;
    padding:50rpx 100rpx;
}
.play_bottom .right_txt .txt2{
    margin:23rpx auto 20rpx;
}